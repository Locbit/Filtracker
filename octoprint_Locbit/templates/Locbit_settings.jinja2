<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Device ID') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.did">
        </div>
        <label class="control-label">{{ _('Octoprint Api Key') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.apiKey">
        </div>
        <label class="control-label">{{ _('Locbit Api Key') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.locbitAPIKey">
        </div>
        <label class="control-label">{{ _('Locbit Access ID') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.locbitAccessID">
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="checkbox">
                    <input type="checkbox" data-bind="checked: settings.plugins.Locbit.camFlipHorizontal"> {{ _('Enable camera horizontal image flip, so QR code data can be read') }}
                </label>
            </div>
        </div>
        <label class="control-label">{{ _('Material') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.material">
        </div>
        <label class="control-label">{{ _('Material Diameter') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.diameter">
        </div>
        <label class="control-label">{{ _('Color') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.color">
        </div>
        <label class="control-label">{{ _('Initial Length') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.initial_length">
        </div>
        <label class="control-label">{{ _('Length') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.length">
        </div>
        <label class="control-label">{{ _('MUID') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.muid">
        </div>
       <label class="control-label">{{ _('Job Progress') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.Locbit.jobProgress">
        </div>
    </div>
